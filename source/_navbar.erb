<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <% link_to '/index.html', class: 'navbar-brand' do %>
    <%= image_tag 'logo.jpg',
                  width: 30,
                  height: 30,
                  alt: translate(:logo) %>
    <%= translate :title %>
  <% end %>

  <button class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% link_to '/blog/feed.html', class: "nav-link #{active_class(%r{\A/blog/})}" do %>
          <%= translate :Blog %>
        <% end %>
      </li>

      <li class="nav-item dropdown">
        <% link_to(
          '#',
          id: :aboutUsNavbarDropdown,
          role: :button,
          class: 'nav-link ' \
                 'dropdown-toggle ' \
                 "#{
                   active_class(
                     '/team.html',
                     '/donate.html',
                     '/rules.html',
                     '/reports.html',
                   )
                 }",
          'data-toggle': :dropdown,
          'aria-haspopup': true,
          'aria-expanded': false,
        ) do %>
          <%= translate :About_Us %>
        <% end %>

        <div class="dropdown-menu" aria-labelledby="aboutUsNavbarDropdown">
          <% link_to '/team.html', class: "dropdown-item #{active_class('/team.html')}" do %>
            <%= translate :Our_team %>
          <% end %>

          <% link_to '/donate.html', class: "dropdown-item #{active_class('/donate.html')}" do %>
            <%= translate :Donate %>
          <% end %>

          <% link_to '/rules.html', class: "dropdown-item #{active_class('/rules.html')}" do %>
            <%= translate :Rules %>
          <% end %>

          <% link_to '/reports.html', class: "dropdown-item #{active_class('/reports.html')}" do %>
            <%= translate :Reports %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</nav>
